{
    "manifest_version":3,
    "name": "Jumia Keyword Tool",
    "description": "jumia product research tool",
    "version": "1.0.3", 
    "content_scripts":[
        {
            "js": ["js/lib/jquery-3.6.0.min.js","js/app/context-util.js","js/app/context.js"],
            "matches":["<all_urls>"]
        }
    ],
    "background": {
        "service_worker" : "js/app/background.js"
    },
    "action": {
        "default_popup":"views/popup.html", 
        "default_title": "RobotDorm Chrome extension",
        "default_icon":"icon.png"
    }, 
    "icons":{
        "16":"icon16.png",
        "48":"icon48.png",
        "128":"icon128.png"
    },
    "web_accessible_resources":[{
        "resources":["js/lib/*.js"],
        "matches": ["<all_urls>"]
    }], 
    "permissions": [
        "storage"
      ], 
      "externally_connectable": {
        "matches": ["https://www.robotdorm.com/*"]
      }
    
}